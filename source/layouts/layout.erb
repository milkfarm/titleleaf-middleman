<% layout = current_page.options[:layout] %>
<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= page_title(current_page.data.title) %></title>

    <!-- Fonts -->
    <link rel="stylesheet" href="https://use.typekit.net/zmb3xsh.css">
    <script src="https://kit.fontawesome.com/3d6d3c695c.js"></script>

    <!-- Styles -->
    <%= stylesheet_link_tag 'main' %>

    <!-- Other -->
    <%= partial "partials/analytics" %>
  </head>
  <body class="<%= body_class(layout) %>">
    <%= partial "partials/header" %>
    <main>
      <%= yield %>
    </main>
    <% unless layout == 'legal' %>
      <%= partial "partials/demonstration" %>
    <% end %>
    <%= partial "partials/footer" %>
    <%= javascript_include_tag 'application' %>
    <% if layout == 'guide' %>
      <script>
        document.addEventListener('DOMContentLoaded', function() {
          toggleAccordion();
        }, false);
      </script>
    <% end %>
    <script data-jsd-embedded data-key="5e24628a-0ae5-4408-b342-1fce318f76f0" data-base-url="https://jsd-widget.atlassian.com" src="https://jsd-widget.atlassian.com/assets/embed.js"></script>
  </body>
</html>
